<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:background="@drawable/itembackground">

        <TextView
            android:id="@+id/txtmemmc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="TextView" android:textSize="18dp" android:textColor="#000000" android:layout_marginLeft="5dp" android:textStyle="bold"/>

        <TextView
            android:id="@+id/txtmemxj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="aaa" android:textSize="18dp" android:textColor="#000000" android:layout_toRightOf="@id/txtmemmc" android:layout_marginLeft="10dp" android:textStyle="bold"/>

        <TextView
            android:id="@+id/txtmemzde"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="aaa"
            android:textColor="#000000"
            android:textSize="15dp" android:layout_toRightOf="@id/txtmemxj" android:layout_marginLeft="10dp" android:layout_alignBottom="@id/txtmemxj"/>

        <TextView
            android:id="@+id/labmemjkp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="今天盘:" android:layout_below="@id/txtmemmc" android:textColor="#000000" android:layout_marginLeft="5dp"/>

        <TextView
            android:id="@+id/txtmemjkp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" android:layout_toRightOf="@id/labmemjkp" android:layout_alignTop="@id/labmemjkp" android:textColor="#000000"/>

        <TextView
            android:id="@+id/labmemzsp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昨收盘:" android:layout_alignTop="@id/labmemjkp" android:layout_centerHorizontal="true" android:textColor="#000000"/>

        <TextView
            android:id="@+id/txtmemzsp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" android:layout_toRightOf="@id/labmemzsp" android:layout_alignTop="@id/labmemzsp" android:textColor="#000000"/>

        <TextView
            android:id="@+id/labmemzgj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="最高价:" android:layout_below="@id/labmemjkp" android:textColor="#000000" android:layout_marginLeft="5dp"/>

        <TextView
            android:id="@+id/txtmemzgj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" android:layout_toRightOf="@id/labmemzgj" android:layout_alignTop="@id/labmemzgj" android:textColor="#000000"/>

        <TextView
            android:id="@+id/labmemzdj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="最低价:" android:layout_alignTop="@id/labmemzgj" android:layout_alignLeft="@id/labmemzsp" android:textColor="#000000"/>

        <TextView
            android:id="@+id/txtmemzdj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" android:layout_alignTop="@id/labmemzgj" android:layout_toRightOf="@id/labmemzdj" android:textColor="#000000"/>

        <TextView
            android:id="@+id/txtmemtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" android:layout_below="@id/labmemzgj" android:textColor="#000000" android:layout_marginLeft="5dp"/>

    </RelativeLayout>

</LinearLayout>