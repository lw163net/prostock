<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" android:background="@drawable/rssitembackground">

    <TextView
        android:id="@+id/textViewRssTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" android:textColor="#FF5500" android:textSize="18dp"/>

    <TextView
        android:id="@+id/textViewRssText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" android:textColor="#000000"/>

    <TextView
        android:id="@+id/textViewRssDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" android:layout_gravity="right" android:textColor="#000000"/>

</LinearLayout>